@page "/"
@using Chirp.Infrastructure.Entities
@model Chirp.Web.Pages.PublicModel
@inject UserManager<Author> UserManager
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>
    <partial name="~/Pages/Shared/_CheepBoxPartial.cshtml" model="Model" />

    @if (Model.Cheeps!.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps!)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        <!-- Check if the user follows the given Author, can be done with User.Following.Contains(cheep.Author) -->
                        <!-- If following write "Unfollow" else "Follow -->
                        
                        <!-- 
                        If the user's following list contains this Author's name, show Unfollow link
                        Else show follow link.
                        -->
                        @if (User.Identity!.IsAuthenticated)
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            if(currentUser!.Following.Contains(cheep.Author))
                            {
                                <a href="/Follow?target=@cheep.Author&undo=true&returnUrl=/">Unfollow</a>
                                <!-- Todo: Replace return url so that it can redirect back regardless of endpoint -->
                            }
                            else if (currentUser.Name == cheep.Author) {}
                            else
                            {
                                <a href = "/Follow?target=@cheep.Author&undo=false&returnUrl=/" > Follow </a>
                                <!-- Todo: Replace return url so that it can redirect back regardless of endpoint -->
                            }
                        }
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
