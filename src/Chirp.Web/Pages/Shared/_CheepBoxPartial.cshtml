@model Chirp.Web.Pages.Shared.TimelineBaseModel

@if (User.Identity!.IsAuthenticated)
{
    <div class="CheepBox">
        <h3>What's on your mind @(Model.DisplayName)?</h3>

        <form method="post" asp-page-handler="" asp-antiforgery="true">
            <input type="hidden" asp-for="UserId" value="@Model.UserId"/>
            <input style="float: left" type="text" asp-for="CheepText">
            <input type="submit" value="Share">
            <span asp-validation-for="CheepText"></span>
        </form>
    </div>
}
  
